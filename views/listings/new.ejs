<%- layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2" >
        <h3> Create a new Listing</h3>
        <!-- no validate is a boolean attribute -->
    <form method="post" class="needs-validation" novalidate action="/listings" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listings[title]" class="form-control" type="text" placeholder="Add a catchy Title" required />
        <div class="valid-feedback">Title looks good!</div>
    </div>
    
    <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea name="listings[description]" class="form-control" required placeholder="enter description"></textarea>
        <div class="valid-feedback">Description looks good!</div>
        
    </div>
        
    <!-- <div class="mb-3">
        <label for="image" class="form-label">image link</label>
        <input name="listings[image]" class="form-control" type="text" placeholder="enter image URL/ Link" />
        <div class="invalid-feedback">Please choose valid link</div>
    </div> -->
    
    <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input name="listings[image]" class="form-control" type="file" placeholder="enter image URL/ Link" required />
        <div class="invalid-feedback">Please choose valid link</div>
    </div>
    
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="number" class="form-label">price</label>
            <input name="listings[price]" class="form-control" required placeholder="1200"  />
            <div class="invalid-feedback">Please enter valid price</div>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input name="listings[country]" class="form-control" required placeholder="India" type="text" />
            <div class="invalid-feedback">Please enter valid country</div>
        </div>
    </div>
    
        <div class="mb-3">
            <label for="text" class="form-label">location</label>
            <input name="listings[location]" class="form-control" required  placeholder="Jaipur, Rajasthan" type="text" />
            <div class="invalid-feedback">location is required</div>
        </div>
        
        <br>
        <button class="btn btn-primary add-btn">Submit</button>
    </form>
    </div>
    </div>
</body>